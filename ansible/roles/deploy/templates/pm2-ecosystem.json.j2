{
  "apps": [
    {
      "name": "{{ pm2_app_name }}",
      "script": "build/core/core/app/start/prod.js",
      "instances": {{ pm2_instances }},
      "exec_mode": "{{ pm2_exec_mode }}",
      "watch": {{ pm2_watch | lower }},
      "max_memory_restart": "{{ pm2_max_memory_restart }}",
      "env": {
        "INFISICAL_SERVICE_TOKEN": "{{ infisical_service_token }}"
      }
    },
    {
      "name": "{{ pm2_app_name }}_worker",
      "script": "build/core/core/worker/start.js",
      "instances": {{ pm2_worker_instances }},
      "exec_mode": "{{ pm2_worker_exec_mode }}",
      "watch": {{ pm2_watch | lower }},
      "max_memory_restart": "{{ pm2_max_memory_restart }}",
      "env": {
        "INFISICAL_SERVICE_TOKEN": "{{ infisical_service_token }}"
      }
    }
  ]
}
